// Функция - Получить настройки для сохранения на сервере
// 
// Возвращаемое значение:
//	Строка (JSON)    - настройки в формате JSON
//
&НаСервере
Функция ПолучитьНастройкиДляСохраненияНаСервере()
	
	СтруктураНастроек = ПолучитьЗапросСПараметрамиНаСервере();
	
	Возврат ПреобразованиеДанных().ЗаписатьОписаниеОбъектаВJSON(СтруктураНастроек);
	
КонецФункции // ПолучитьНастройкиДляСохраненияНаСервере()

// Процедура - Обработчик команды "СохранитьНастройкиВФайл"
//
&НаКлиенте
Процедура СохранитьНастройкиВФайл(Команда)
	
	ВыборФайла = Новый ДиалогВыбораФайла(РежимДиалогаВыбораФайла.Сохранение);
	ВыборФайла.Фильтр = "Настройки процессора запросов (*.json)|*.json";
	ВыборФайла.Заголовок = "Сохранение настроек процессора запросов";
	
	ОбработкаВыбораФайла = Новый ОписаниеОповещения("СохранитьНастройкиВФайлЗавершение", ЭтотОбъект);
	
	ВыборФайла.Показать(ОбработкаВыбораФайла);
	
КонецПроцедуры // СохранитьНастройкиВФайл()

// Процедура - Продолжение обработки команды команды "СохранитьНастройкиВФайл"
//
&НаКлиенте
Процедура СохранитьНастройкиВФайлЗавершение(ВыбранныеФайлы, ДополнительныеПараметры) Экспорт
	
	Если НЕ ТипЗнч(ВыбранныеФайлы) = Тип("Массив") Тогда
		Возврат;
	КонецЕсли;
	
	Если ВыбранныеФайлы.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Настройки = ПолучитьНастройкиДляСохраненияНаСервере();
	
	ТекстНастроек = Новый ТекстовыйДокумент();
	ТекстНастроек.УстановитьТекст(Настройки);
	ТекстНастроек.НачатьЗапись(, ВыбранныеФайлы[0], "UTF-8");
	
КонецПроцедуры // СохранитьНастройкиВФайлЗавершение()

// Процедура - Загрузить настройки на сервере
//
// Параметры:
//  ТекстНастроек      - Строка (JSON)    - настройки в формате JSON
//
&НаСервере
Процедура ЗагрузитьНастройкиНаСервере(Знач ТекстНастроек)
	
	ПреобразованиеДанных = ПреобразованиеДанных();
	
	СтруктураНастроек = ПреобразованиеДанных.ПрочитатьОписаниеОбъектаИзJSON(ТекстНастроек);
	
	Настройки = ПреобразованиеДанных.ЗначениеИзСтруктуры(СтруктураНастроек);
	
	УстановитьЗапросСПараметрамиНаСервере(Настройки);
	
КонецПроцедуры // ЗагрузитьНастройкиНаСервере()

// Процедура - Обработчик команды "ЗагрузитьНастройкиИзФайла"
//
&НаКлиенте
Процедура ЗагрузитьНастройкиИзФайла(Команда)
	
	ВыборФайла = Новый ДиалогВыбораФайла(РежимДиалогаВыбораФайла.Открытие);
	ВыборФайла.Фильтр = "Настройки процессора запросов (*.json)|*.json";
	ВыборФайла.Заголовок = "Открытие настроек процессора запросов";
	
	ОбработкаВыбораФайла = Новый ОписаниеОповещения("ЗагрузитьНастройкиИзФайлаПродолжение", ЭтотОбъект);
	
	ВыборФайла.Показать(ОбработкаВыбораФайла);
	
КонецПроцедуры // ЗагрузитьНастройкиИзФайла()

// Процедура - Продолжение обработки команды команды "ЗагрузитьНастройкиИзФайла"
//
&НаКлиенте
Процедура ЗагрузитьНастройкиИзФайлаПродолжение(ВыбранныеФайлы, ДополнительныеПараметры) Экспорт
	
	Если НЕ ТипЗнч(ВыбранныеФайлы) = Тип("Массив") Тогда
		Возврат;
	КонецЕсли;
	
	Если ВыбранныеФайлы.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	ДопПараметры = Новый Структура("ТекстНастроек", Новый ТекстовыйДокумент());
	
	ОбработкаЧтенияФайла = Новый ОписаниеОповещения("ЗагрузитьНастройкиИзФайлаЗавершение", ЭтотОбъект, ДопПараметры);
	
	ДопПараметры.ТекстНастроек.НачатьЧтение(ОбработкаЧтенияФайла, ВыбранныеФайлы[0], "UTF-8");

КонецПроцедуры // ЗагрузитьНастройкиИзФайлаПродолжение()

// Процедура - Завершение обработки команды команды "ЗагрузитьНастройкиИзФайла"
//
&НаКлиенте
Процедура ЗагрузитьНастройкиИзФайлаЗавершение(ДополнительныеПараметры) Экспорт
	
	ЗагрузитьНастройкиНаСервере(ДополнительныеПараметры.ТекстНастроек.ПолучитьТекст());
	
КонецПроцедуры // ЗагрузитьНастройкиИзФайлаЗавершение()

